rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leer solo si la petici칩n est치 autenticada
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Permite escribir solo si la petici칩n est치 autenticada
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
